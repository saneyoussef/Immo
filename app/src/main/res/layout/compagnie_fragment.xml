<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <EditText
        android:background="@drawable/rechercher_textview"
        android:id="@+id/CompanyUser"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:hint=" Nom d'utilisateur"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/spinner1"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/rechercher_textview"
            android:id="@+id/EntreName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint=" Entreprise"/>
        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/rechercher_textview"
            android:id="@+id/companyMail"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint=" Email"/>

        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/rechercher_textview"
            android:id="@+id/companyTel"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint=" Numero tel"/>
        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/rechercher_textview"
            android:id="@+id/company_password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint=" mot de passe"/>

        <EditText
            android:layout_marginTop="20dp"
            android:background="@drawable/rechercher_textview"
            android:id="@+id/company_password1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint=" confirmation mot de passe"/>

        <TextView
            android:textColor="#090707"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="choisissez un pack"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/details1"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:text="BASIC"/>
            <TextView
                android:id="@+id/details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="GOLD"/>
            <TextView
                android:id="@+id/details3"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARTNER"/>


        </LinearLayout>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:id="@+id/typePack"
            android:layout_width="wrap_content"
            android:orientation="horizontal"

            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/basic"
                android:layout_gravity="center"
                android:button="@mipmap/ic_launcher"
                android:background="@drawable/custom_btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




            <RadioButton
                android:id="@+id/silver"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:button="@mipmap/ic_launcher"
                android:background="@drawable/custom_btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/gold"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:button="@mipmap/ic_launcher"
                android:background="@drawable/custom_btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>
    </LinearLayout>
        <Button
            android:textColor="#ffffff"
            android:id="@+id/inscriptionCompany"
            android:layout_marginTop="40dp"
            android:layout_width="300dp"
            android:background="@drawable/loginavecfacebook"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="S'inscrire"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="________________________________________________________"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="vous avez deja un compte?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#333030"
                    android:text="  connectrez vous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>