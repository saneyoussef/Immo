<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Company_inscrip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:gravity="center"
            android:textSize="40dp"/>

        <EditText
            android:id="@+id/CompanyUser"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Username"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>


        <EditText
            android:id="@+id/EntreName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Entreprise"/>



        <EditText
            android:id="@+id/companyMail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Email"/>
        <EditText
            android:id="@+id/companyTel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_gravity="center"
            android:hint="Numero tel"/>


        <EditText
            android:id="@+id/company_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="mot de passe"/>

        <EditText
            android:id="@+id/company_password1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="confirmation mot de passe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Member type"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/details1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:text="BASIC"/>
                <TextView
                    android:id="@+id/details2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="GOLD"/>
                <TextView
                    android:id="@+id/details3"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PARTNER"/>
            </LinearLayout>



            <RadioGroup
 android:id="@+id/typePack"
                android:layout_width="wrap_content"
                android:orientation="horizontal"

                android:layout_height="wrap_content">

                <RadioButton android:id="@+id/basic"
                    android:layout_gravity="center"
                    android:button="@mipmap/ic_launcher"
                    android:background="@drawable/custom_btn_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




                    <RadioButton
                        android:id="@+id/silver"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@mipmap/ic_launcher"
                        android:background="@drawable/custom_btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/gold"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:button="@mipmap/ic_launcher"
                        android:background="@drawable/custom_btn_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


            </RadioGroup>



        </LinearLayout>
        <Button
            android:id="@+id/inscriptionCompany"
            android:layout_marginTop="40dp"
            android:layout_width="150dp"
            android:background="@drawable/login_buttons"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="S'inscrire"/>

    </LinearLayout>




</ScrollView>