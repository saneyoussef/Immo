<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewid"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="160dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp">
            <ImageButton
                tools:ignore="MissingPrefix"
                app:srcCompat="@drawable/ic_like"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        <ImageView
            android:id="@+id/imagebien"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimaryDark"/>
        </RelativeLayout>
            <TextView
                android:textColor="#c72e45"
                android:textSize="13dp"
                android:id="@+id/nompduprojet"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="19dp"
                android:text="nomduprojet"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="18dp">
            <TextView
                android:textColor="#8F2D56"
                android:textAlignment="textEnd"
                android:textSize="14dp"
                android:text="prÃ©vu pour le:  "
                android:layout_width="98dp"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#218380"
                android:textSize="14dp"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:text="date"/>
        </LinearLayout>

        <TextView
            android:textColor="#bf209f"
            android:textSize="14dp"
            android:id="@+id/prix"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_marginLeft="40dp"
            android:text="prix"/>
        <TextView
            android:textColor="#218380"
            android:textSize="14dp"
            android:id="@+id/ville"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:text="avenue"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bcontacter"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="contacter"
                android:textSize="7sp"/>
            <Button
                android:id="@+id/bmessage"
                android:layout_marginLeft="10dp"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="message"
                android:textSize="7sp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>